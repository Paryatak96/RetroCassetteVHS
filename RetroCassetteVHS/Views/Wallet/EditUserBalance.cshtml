@model RetroCassetteVHS.Application.ViewModels.Wallet.EditUserWalletVm

@{
    ViewData["Title"] = "Edit User Balance";
}

<h1>Edit User Balance</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserBalance" method="post">
            <!-- Dodaj atrybut method="post" -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />  <!-- Hidden field for UserId -->
            <div class="form-group">
                <label asp-for="Balance" class="control-label">New Balance</label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
